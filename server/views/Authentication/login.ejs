<%-include ../partials/header.ejs %>
<%-include ../partials/main_nav.ejs %>

<main class="continter">
    <% if(message.length>0){%>
        <div class="alert alter danger">
            <%= message%>
        </div>
    <%}%>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Enter login info</h1>
            <form method="post" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username">Username: </label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Enter username"
                    id="username"
                    required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter password"
                    id="password"
                    required>
                    No account?
                    <a href="/register">Register Here</a>
                </fieldset>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Login">
                    <a href="/"></a>
                    <input type="button" class="btn btn-warning" value="Cancel">
                    <a href="/"></a>
                </fieldset>
            </form>
            <hr>
            <a href="/auth/google" class="btn btn-outline-dark w-100 d-flex align-items-center justify-content-center gap-2 mt-3">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3c/Google_Favicon_2025.svg/250px-Google_Favicon_2025.svg.png" width="20">
                <span>Sign in with Google</span>
            </a>
            <hr>
            <a href="/auth/github" class="btn btn-outline-dark btn-gray w-100 mt-2">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/c2/GitHub_Invertocat_Logo.svg" width="20"> <span>Sign in with GitHub</span>
            </a>
            <hr>
            <a href="/auth/facebook" class="btn btn-primary w-100 mt-2 d-flex align-items-center justify-content-center">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/cd/Facebook_logo_%28square%29.png/500px-Facebook_logo_%28square%29.png" width="20">
                <span>Sign in with Facebook</span>
            </a>
        </div>
    </div>
</main>

<%-include ../partials/footer.ejs %>